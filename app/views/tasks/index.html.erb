<p id="notice" style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
   
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th> Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td class="fs-4"><%= link_to task.description,task %></td>
      <td class="fw-bold <%= task.complete? ? 'text-success' : 'text-danger' %> "><%= task.complete %></td>
      <td>
        <% if task.complete == false %>
         <%= form_with(model: task) do |form| %>
          <%= form.check_box :complete, checked: true, class: "visually-hidden" %>
          <%= form.submit "Complete", class: "btn btn-primary", class: "btn btn-outline-secondary" %>
        <% end %>
        <% else %>
          <%= form_with(model: task) do |form| %>
          <%= form.check_box :complete, checked: false, class: "visually-hidden" %>
          <%= form.submit "UnComplete", class: "btn btn-primary", class: "btn btn-outline-secondary" %>
        <% end %>
        <% end %>   
      </td>
      <td><%= button_to "Destroy", task, method: :delete,class:"btn btn-danger" %></td>
    </tr>
    <% end %>

  </tbody>
</table>

</div>



<%= link_to "New task", new_task_path,class:"btn btn-success" %>
