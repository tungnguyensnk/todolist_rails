<p style="color: green"><%= notice %></p>
<%= link_to "Back" , tasks_path %>
<%= render @task %>

<div>
  <%= link_to "Edit this task", edit_task_path(@task), class:"btn btn-info" %>
  <% if @task.group %>
    | <%= link_to "Back to group", group_path(@task.group) %>
  <% end %>
  <%= button_to "Destroy this task", @task, method: :delete, class:"btn btn-danger"%>
</div>
