<p style="color: green"><%= notice %></p>

<h1>Groups</h1>
<% if @groups.empty? %>
  <p>There are no groups yet.</p>
<% else %>
  <table class="table" style="width: 50%">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td style="width: 20px"><%= link_to 'Show', group, class:"btn btn-info"%></td>
        <% if group.creator == current_user %>
          <td style="width: 20px">
            <%= link_to 'Edit', edit_group_path(group),class:"btn btn-danger" %>
          </td>
          <td><p class="btn btn-outline-warning"><%= add_task_link(group) %></p></td>
          <!-- create task for group -->
        <% end %>
    <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to "New group", new_group_path, class:"btn btn-success"%>
<br/>
<p class="btn btn-outline-warning" style="margin-top: 5px"><%= join_group_p %></p>
